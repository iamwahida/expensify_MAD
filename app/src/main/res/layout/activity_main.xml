<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lavender2"
    tools:context=".MainActivity">

    <!-- Logout Icon -->
    <ImageView
        android:id="@+id/logoutIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Create Trip Button -->
    <Button
        android:id="@+id/createTripButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create Trip"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoutIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Trip Info Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tripCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/createTripButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Loading trip..."
            android:textSize="16sp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/addExpenseButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        android:elevation="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tripCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
